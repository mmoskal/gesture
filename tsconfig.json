{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": false,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "outDir": "built",
    "newLine": "LF",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
